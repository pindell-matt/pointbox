<h1>User <%= @user.id %>: <%= @user.username %></h1>

<h3><%= link_to "Add Points to #{@user.username}", new_admin_user_point_path(@user) %></h3>

<%= button_to "Edit #{@user.username}", edit_admin_user_path(@user), method: :get %>
<%= button_to "Delete #{@user.username}", admin_user_path, method: :delete %>

<h3>Total Points: <%= @user.total_points %></h3>
<h3>Spent Points: <%= @user.spent_points %></h3>

<h3>Rewards</h3>
<div class="user_rewards">
  <ul>
    <% @user.rewards.each do |reward| %>
      <li><%= reward.name %></li>
    <% end %>
  </ul>
</div>
