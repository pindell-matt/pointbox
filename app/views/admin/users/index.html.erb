<h1>Users Index</h1>

<%= button_to "Create New User", new_admin_user_path, method: :get, class: "button" %><br>

<table style="width:33%">
  <tr>
    <th>Id</th>
    <th>Username</th>
    <th>Total Points</th>
    <th>Tools</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= link_to user.username, admin_user_path(user) %></td>
      <td><%= user.total_points %></td>
      <td>
        <%= link_to "Add Points", new_admin_user_point_path(@user) %>
        <%= link_to "Edit", edit_admin_user_path(user), method: :get %>
        <%= link_to "Delete", admin_user_path(user), method: :delete %>
      </td>
    </tr>
  <% end %>
</table>
