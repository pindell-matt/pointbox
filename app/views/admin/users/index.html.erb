<h1>Users Index</h1>

<%= button_to "Create New User", new_admin_user_path, method: :get %><br>

<table style="width:25%">
  <th>
    <td>Username</td>
    <td>Points</td>
    <td>Options</td>
  </th>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= link_to user.username, admin_user_path(user) %></td>
      <td><%= user.total_points %></td>
      <td>
        <%= link_to "Edit", edit_admin_user_path(user), method: :get %>
        <%= link_to "Delete", admin_user_path(user), method: :delete %>
      </td>
    </tr>
  <% end %>
</table>
